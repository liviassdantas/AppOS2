<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Entrada"
        android:orientation="vertical"
        android:background="@color/laranjaPrincipal">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/activity_entrada_txtLogo"
                android:layout_width="409dp"
                android:layout_height="349dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_appos_branco" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/activity_entrada_txtLogo"
                android:layout_alignBottom="@id/activity_entrada_txtLogo"
                android:layout_marginStart="176dp"
                android:layout_marginBottom="-228dp"
                android:text="@string/entrar"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>