<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Entrada"
        android:orientation="vertical"
        android:background="@color/laranjaPrincipal">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:src="@drawable/ic_icone_appos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/activity_login_txtLogo"
                android:layout_alignStart="@id/activity_login_txtLogo"
                android:layout_marginStart="238dp"
                android:layout_marginBottom="-21dp"/>
        <TextView
                android:id="@+id/activity_login_txtLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appos_logo"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/junction_regular"
                android:textSize="80sp"
                android:layout_centerInParent="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrar"
                android:textColor="#FFFFFF"
                android:layout_alignBottom="@id/activity_login_txtLogo"
                android:textSize="25sp"
                android:layout_marginBottom="-231dp"
                android:layout_alignStart="@id/activity_login_txtLogo"
                android:layout_marginStart="96dp"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>