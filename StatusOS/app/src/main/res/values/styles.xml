<resources>

    <!-- Base application theme. -->
    <style name="StatusOSTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/amareloPrincipal</item>
        <item name="colorPrimaryDark">@color/amareloEscuro</item>
        <item name="colorAccent">@color/rosa</item>
    </style>

    <style name="StatusOSTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StatusOSTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="StatusOSTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.MaterialComponents.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/branco</item>
    </style>

</resources>
